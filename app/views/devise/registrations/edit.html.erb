<h2><%= t('devise.registrations.edit.header') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),
  data: { turbo: false },
  html: { method: :put }) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :email, class: 'form-label fw-bold' %>
    <%= f.email_field :email, class: 'form-control w-25', autofocus: true,
      autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="mb-3">
      <%= t('devise.registrations.edit.email_confirmations')%> <%= resource.unconfirmed_email %>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :password, class: 'form-label fw-bold' %>
      <i>(<%= t('devise.registrations.edit.leave_blank') %>)</i>
    <%= f.password_field :password, class: 'form-control w-25',
      autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= t('devise.registrations.edit.symbols_min') %>)</em>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, class: 'form-label fw-bold' %>
    <%= f.password_field :password_confirmation, class: 'form-control w-25',
      autocomplete: "new-password" %>
  </div>

  <div class="mb-3">
    <%= f.label :current_password, class: 'form-label fw-bold' %>
      <i>(<%= t('devise.registrations.edit.current_password') %>)</i>
    <%= f.password_field :current_password, class: 'form-control w-25',
      autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.registrations.edit.submit'), class: 'btn btn-primary' %> или
      <%= link_to t('links.back'), :back, class: 'text-decoration-none' %>
  </div>
<% end %>

<div class="mt-3">
  <%= button_to t('devise.registrations.edit.cancel_account'), registration_path(resource_name),
    class: 'btn btn-danger',
    form: { data: { turbo_confirm: t('devise.registrations.edit.cancel_account_confirmation') }},
    method: :delete %></p>
</div>
