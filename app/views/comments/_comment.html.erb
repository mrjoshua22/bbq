<div class="buffer-bottom">
  <p><%= comment.body %></p>
  <p>
    <span>
      <% if comment.user.present? %>
        <%= render partial: 'users/user', object: comment.user %>
      <% else %>
        <em><strong><%= comment.user_name %></strong></em>
      <% end %>
    </span>
    <em><%= l comment.created_at, format: :long %></em>
    <% if current_user_can_edit?(comment) %>
      <%= link_to event_comment_path(comment.event, comment),
        data: { turbo_method: :delete, turbo_confirm: t('.destroy_confirm') } do %>
          <i class="bi bi-trash"></i>
      <% end %>
    <% end %>
  </p>
</div>
