<%= form_with model: @user, html: { multipart: true } do |form| %>
  <%= render partial: 'partials/form_errors', locals: { model: @user } %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label fw-bold' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :email, class: 'form-label fw-bold' %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Сохранить', class: 'btn btn-primary' %> или
      <%= link_to 'вернуться', :back, class: 'text-decoration-none' %>
  </div>
<% end %>
