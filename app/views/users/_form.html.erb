<%= form_with model: @user, data: { turbo: false },
  html: { multipart: true } do |form| %>
  <%= render partial: 'partials/form_errors', locals: { model: @user } %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label fw-bold' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :email, class: 'form-label fw-bold' %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :avatar, class: 'form-label fw-bold' %>
    <% if @user.avatar.attached? %>
      <p><%= image_tag @user.avatar.variant(:thumb), class: 'rounded' %></p>
    <% end %>
    <%= form.file_field :avatar, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit t('buttons.save'), class: 'btn btn-primary' %> <%= t('or') %>
      <%= link_to t('links.back'), :back, class: 'text-decoration-none' %>
  </div>
<% end %>
